<main class='show'>

  <section class='show_header'>
    <h1>Welcome, <%= current_user.username %>!</h1>
    <% if current_user.gifs.empty? %>
      <h2>GIF OUTTA HERE! Looks like you don't have any favorites yet!
        <%= link_to "Let's fix that.", gifs_path %></h2>
      <% else %>
    <h2>Your favorite gifs:</h2>
    <% end %>
  </section>


    <% current_user.categories.uniq.each do |category| %>
    <div class="category">
      <h3><%= category.name %></h3>
    </div>

    <div class='all_gifs'>
      <% category.gifs.each do |gif| %>
        <% if current_user.gifs.include?(gif) %>
          <div id="img-<%=gif.id%>">
           <img src=<%= gif.image_path %>>
           <%= link_to "<i class='far fa-times-circle'></i>".html_safe, gif_path(gif), method: 'put', title: 'Remove from Favorites', class: 'x' %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>


</main>
