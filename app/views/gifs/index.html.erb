<div class= 'all_gifs'>
  <% @categories.each do |category| %>
    <div class=<%=category.name%>>
      <h2><%= category.name %></h2>
      <% if current_admin? %>
        <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, category_path(category), method: 'delete', title: 'Delete Category' %>
      <% end %>
    </div>

    <% category.gifs.each do |gif| %>
    <div id="img-<%=gif.id%>">
     <img src=<%= gif.image_path %>>
     <%= link_to "<i class='far fa-heart'></i>".html_safe, favorites_path(gif_id: gif.id), method: 'post', title: 'Add to Favorites', class: 'heart' %>
    </div>
    <% end %>

  <% end %>
</div>
